<header>
  <div class="navbar bg-base-100 shadow-sm">
    <div class="flex-1">
        <%= link_to root_path, class: "btn btn-ghost text-xl" do %>
          <%= inline_svg_tag("bear.svg", class: "fill-current") %>
          くまーんの巣
        <% end %>
    </div>
    <div class="flex-none">
      <div class="dropdown dropdown-end">
        <button tabindex="0" class="btn btn-square btn-ghost">
          <%= inline_svg_tag("dots_menu.svg", class: "inline-block h-5 w-5 stroke-current") %>
        </button>
        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52 mt-2">
          <li><%= link_to t('header.home'), root_path %></li>
          <li><%= link_to t('header.profile'), profile_path %></li>
        </ul>
      </div>
    </div>
  </div>
</header>
